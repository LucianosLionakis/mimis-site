<!DOCTYPE html>
<html>
<head>
<title>Menu Kafenio Mimis</title>
</head>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Averia+Gruesa+Libre">
<body>
    <div class='card m-3 shadow averia'>
        <div class="card-body">
            <h1 class="card-title text-center">MIMIS</h5>
            <div class='container-fluid'>
                <% @all_meals.each do |meals| %>
                    <div class='card shadow'>
                        <div class="card-body">
                            <h1 class="card-title text-center">
                                <u>
                                    <%= t(meals[0]) %>
                                </u>
                            </h1>
                            <% meals[1].each do |meal|%>
                                <div class='card shadow'>
                                    <div class="card-body">
                                        <div class='row'>
                                            <div class='col'>
                                                <h3 class="card-title"><%= t(meal.title) %>
                                                <% if meal.vegi? %>
                                                    <%= mdi_tag('sprout-outline 36px', class: 'green float-right') %>
                                                <% end %>
                                                <% if meal.vegan? %>
                                                    <%= mdi_tag('sprout 36px', class: 'green float-right') %>
                                                <% end %>
                                                </h3>
                                            </div>
                                        </div>
                                        <div class='row'>
                                            <div class='col-10'>
                                                <h4 class="card-text text-muted"><%= t(meal.description) %></h3>
                                            </div>
                                            <div class='col text-right'>
                                                <h4>
                                                    <%= meal.price %>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>         
        </div>
    </div>
</body>
</html>